<%-include('partials/header.html')%>
    <link rel="stylesheet" href="../css/signup.css">
    <title>Signup page</title>
    </head>

    <body>
        <div class="container bg-image">
            <div class="row">
                <div class="col-sm-6 signup-form">
                    <h1 class="display-4 header">Library Management System</h1>
                    <div class="alert alert-primary" role="alert">
                        Sign up now to get access to all the books!
                    </div>
                    <form class="submit form" method="post">
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            <input type="text" class="form-control" id="firstName" placeholder="John Doe" name="firstName">
                        </div>

                        <div class="form-group">
                            <label for="lastName">Last Name</label>
                            <input type="text" class="form-control" id="lastName" placeholder="John Doe" name="lastName">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Email</label>
                                <input type="email" class="form-control" id="inputEmail4" placeholder="Email" name="email">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Password</label>
                                <input type="password" class="form-control" id="inputPassword4" placeholder="Password" name="password">
                            </div>
                        </div>
                
         
                     
                        <div class="submit-button">
                            <button type="submit" class="btn btn-danger">Create an account!</button>
                            <br>
                            OR
                        </div>
                    </form>
                    <div class="submit-button">
                        <a href="/login"><button class="btn btn-success">Sign in</button></a>
                    </div>
                    <div class="">
                        <% for(var i=0; i< errs.length; i++){ %>
                            <%= errs[i].message %>
                            <br>
                        <% } %>

                    </div>
                </div>
            </div>
        </div>
        <%-include('partials/footer.html')%>
